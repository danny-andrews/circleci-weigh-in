{
  "name": "thresh-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "ci": "yarn lint && yarn test:coverage && yarn stats",
    "lint": "eslint .",
    "stats": "echo 'LOC IN PROJECT...' && find packages/*/src -name '*.js' -not -path '**/__tests__/*' | xargs wc -l",
    "test": "ava",
    "test:coverage": "nyc ava"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@danny.andrews/eslint-config": "latest",
    "ava": "^1.0.0",
    "babel-eslint": "^8.2.6",
    "eslint": "^5.0.0",
    "eslint-plugin-import": "^2.14.0",
    "expect": "^1.20.2",
    "lerna": "^3.4.1",
    "nyc": "^11.1.0",
    "sort-package-json": "^1.6.0"
  }
}
